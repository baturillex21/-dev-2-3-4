<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Güncelle</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <div class="container" style="width:50%;margin-top:60px;">
      <form method="POST" action="/albumu_guncelle_post">
        <div class="field">
          <label class="label">Albüm Güncelle</label>

          <div class="control">
            <input class="input" type="text" name="guncellenecekAlbumId" value="<%= guncellenecek_album_id %>" />
          </div>

          <div class="control">
            <input class="input" type="text" name="yeni_albumIsım" placeholder="Güncel Albüm İsmini Yazınız" />
          </div>
          <div class="control">
            <input class="input" type="date" name="yeni_cikisTarihi" placeholder="Çıkış Tarihini Düzenleyin" />
          </div>
          <div class="select">
            <select name="yeni_sanatciId">
              <% veri[0].forEach(function(p){ %>
              <option value="<%= p.SanatciId %>"><%= p.SanatciId %></option>
              <% }); %>
            </select>
          </div>
          <div class="select">
            <select name="yeni_muzikturId">
              <% veri[1].forEach(function(p){ %>
              <option value="<%= p.MuzikTurId %>"><%= p.MuzikTurId %></option>
              <% }); %>
            </select>
          </div>
        </div>
        <div class="control">
          <button type="submit" class="button is-primary" style="    margin-left: 176px;width: 50%;">Güncelle</button>
        </div>
      </form>
    </div>
  </body>
</html>
